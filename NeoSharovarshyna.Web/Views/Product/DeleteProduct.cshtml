@model ProductDto

<div class="container">
    <h1>Edit Product</h1>
    <hr />
    <form method="post">
        <input asp-for="ProductId" hidden />
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" asp-for="Name" readonly />
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="number" class="form-control" asp-for="Price" readonly/>
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" asp-for="Description" readonly></textarea>
        </div>
        <div class="form-group">
            <label>Category</label>
            <input type="text" class="form-control" asp-for="CategoryName" readonly/>
        </div>
        <div class="form-group">
            <label>Image URL</label>
            <input type="text" class="form-control" asp-for="ImageUrl" readonly/>
        </div>
        <div class="mt-2 justify-content-between">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="ProductIndex" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
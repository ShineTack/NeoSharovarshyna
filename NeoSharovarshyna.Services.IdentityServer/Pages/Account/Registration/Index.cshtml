@page
@using Microsoft.AspNetCore.Authorization;
@model NeoSharovarshyna.Services.IdentityServer.Pages.Account.Registration.Index;
@attribute [AllowAnonymous]

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>@ViewData["Title"]</h2>
        <hr />
        <form asp-asp-page="/Account/Registration/Index" method="post">
            <input asp-for="RegisterViewModel.ReturnUrl" value="@ViewData["returnUrl"]" hidden/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegisterViewModel.Username" class="control-label"></label>
                <input asp-for="RegisterViewModel.Username" class="form-control" />
                <span asp-validation-for="RegisterViewModel.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterViewModel.Email" class="control-label"></label>
                <input asp-for="RegisterViewModel.Email" class="form-control" />
                <span asp-validation-for="RegisterViewModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterViewModel.FirstName" class="control-label"></label>
                <input asp-for="RegisterViewModel.FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RegisterViewModel.LastName" class="control-label"></label>
                <input asp-for="RegisterViewModel.LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RegisterViewModel.Password" class="control-label"></label>
                <input asp-for="RegisterViewModel.Password" type="password" class="form-control" />
                <span asp-validation-for="RegisterViewModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="form-control" asp-for="RegisterViewModel.RoleName">
                    @foreach(var role in Model.ViewData["roles"] as List<string>)
                    {
                        <option value="@role">@role</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="RegisterViewModel.AllowRememberLogin" class="form-check-input" />
                    <label class="form-check-label" asp-for="RegisterViewModel.AllowRememberLogin">Remember Me</label>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="RegisterViewModel.EnableLocalLogin" class="form-check-input" />
                    <label class="form-check-label" asp-for="RegisterViewModel.EnableLocalLogin">Enable Local Login</label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
</div>
@model IEnumerable<ProductDto>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-info">Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateProduct" class="btn btn-outline-info"><i class="fa-solid fa-plus"></i> Create New Product</a>
        </div>
    </div>
    <div class="container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Image URL</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductId</td>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>@product.Description</td>
                        <td>@product.CategoryName</td>
                        <td>@product.ImageUrl</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a asp-action="EditProduct" class="btn btn-success" asp-route-productId="@product.ProductId"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                                <a asp-action="DeleteProduct" class="btn btn-danger" asp-route-productId="@product.ProductId"><i class="fa-solid fa-trash"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@model ProductDto

<form>
    <input asp-for="ProductId" hidden />
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6">
                <img class="img-fluid" src="@Model.ImageUrl" alt="@Model.Name">
            </div>
            <div class="col-md-6">
                <h1 class="fw-bold mb-4">@Model.Name</h1>
                <p class="text-muted mb-4">Category: @Model.CategoryName</p>
                <h2 class="mb-4">$@Model.Price</h2>
                <p class="mb-4">@Model.Description</p>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger mb-4"></span>
            </div>
            <input type="submit" class="btn btn-primary mt-4" value="Add To Cart">
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}